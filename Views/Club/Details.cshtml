@using BDProject_MarathonesApp.ViewModels
@model ClubDetailsVM

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<nav class="navbar navbar-expand-lg navbar-light bg-light p-3">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" asp-controller="Home" asp-action="Index" asp-route-id="@Model.UserId">Home <span class="sr-only"></span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Result" asp-action="Index" asp-route-id="@Model.UserId">Wyniki</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Club" asp-action="Index" asp-route-userId="@Model.UserId">Klub</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Profile" asp-route-id="@Model.UserId">Moje Konto</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Login">Wyloguj</a>
            </li>
        </ul>
    </div>
</nav>
<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Club.Name
        <small>Secondary Text</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="https://via.placeholder.com/750x500" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Opis</h3>
            <p>@Model.Club.Description</p>
            
            <h3 class="my-3">Adres</h3>
            <style>
                ul {
                    list-style-type: none;
                    padding: 0;
                }

                li {
                    margin-bottom: 5px;
                }
            </style>

            <ul>
                <li>@Model.Club.Address.Region</li>
                <li>@Model.Club.Address.City @Model.Club.Address.PostalCode</li>
                <li> @Model.Club.Address.Street</li>
                @if (Model.Club.Address.BuildingNumber is not null)
                {
                    <li>@Model.Club.Address.BuildingNumber</li>
                }
            </ul>

            <form method="post" action="@Url.Action("JoinClub", "Club")">
                <input type="hidden" name="id" value="@Model.Club.Id" />
                <input type="hidden" name="userId" value="@Model.UserId" />
                <button type="submit" class="btn btn-primary">Dołącz do klubu</button>
            </form>

        </div>

    </div>





</div>
<!-- /.container -->