@using BDProject_MarathonesApp.Models
@model List<Race>

@{
    ViewData["Title"] = "Races";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light p-3">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="#">Home <span class="sr-only"></span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Result" asp-action="Index" >Wyniki</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Moje Konto</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Login">Wyloguj</a>
            </li>
        </ul>
    </div>
</nav>


<main role="main">

    <div class="list-group p-5">
        @foreach (var race in Model)
        {
            <a class="list-group-item flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@race.Name</h5>
                    <small>@race.Date</small>
                    
                </div>
                <p class="mb-1">@race.Description</p>                
                 <small>@race.Address.City</small>

            </a>
            <div class="d-flex gap-4 ms-4">
                <form method="post" asp-controller="Admin" asp-action="DeleteRace" asp-route-id="@race.Id">
                    <button type="submit" class="btn btn-danger">Usun Bieg</button>
                </form>

                <a asp-controller="Admin" asp-action="UpdateRace" asp-route-id="@race.Id" class="btn btn-primary">Edytuj Bieg</a>
                <a asp-controller="Admin" asp-action="GetParticipants" asp-route-raceId="@race.Id" class="btn btn-primary">Wyswietl uczestników</a>
            </div>
        }
    </div>

</main>
