@using BDProject_MarathonesApp.Models
@model List<Club>

@{
    ViewData["Title"] = "Clubs";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light p-3">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarNavDropdown">
        <ul class="navbar-nav">

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="AllRaces">Biegi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="AllUsers">Użytkownicy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="AllClubs">Kluby</a>
            </li>
        </ul>
        <ul class="navbar-nav">

            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Login">Wyloguj</a>
            </li>
        </ul>
    </div>
</nav>


<main role="main">

    <div class="list-group p-5">
        <a class="btn btn-primary fs-3 p-3 mx-auto" asp-controller="Admin" asp-action="AddClub">Dodaj Klub</a>
        @foreach (var race in Model)
        {
            <div class="list-group-item flex-column align-items-start m-2">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@race.Name</h5>
                    <small>@race.Address.Region</small>

                </div>
                <div class="d-flex w-100 justify-content-between">
                    <p class="mb-1">@race.Description</p>
                    <small>@race.Address.City @race.Address.Street</small>

                </div>
                
                
                <div class="d-flex gap-4 ms-1">
                    <form method="post" asp-controller="Admin" asp-action="DeleteClub" asp-route-id="@race.Id">
                        <button type="submit" class="btn btn-danger">Usun Klub</button>
                    </form>

                    
                    <a asp-controller="Admin" asp-action="GetClubMembers" asp-route-id="@race.Id" class="btn btn-primary">Wyswietl klubowiczów</a>
                </div>

            </div>

        }
    </div>

</main>
